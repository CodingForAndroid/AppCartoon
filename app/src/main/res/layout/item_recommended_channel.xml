<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="false"
              android:orientation="vertical"
              android:paddingBottom="5dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp">

    <RelativeLayout android:id="@+id/rl_channel_title" android:layout_height="wrap_content" android:layout_width="fill_parent">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_strongly_title"
            android:drawableLeft="@mipmap/icon1_rec_2x"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_strongly_right_ic"
            android:background="@mipmap/icon_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:clickable="false"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true">
            <ImageView
                style="@style/ChannelImageStyle"
                android:id="@+id/iv_1" />
            <TextView
                style="@style/ChannelTextStyle"
                android:id="@+id/tv_1_title"
                android:layout_below="@id/iv_1" />
            <TextView
                android:textColor="@color/black"
                style="@style/ChannelTextStyle"
                android:textSize="12sp"
                android:id="@+id/tv_1_sub_title"
                android:layout_below="@id/tv_1_title" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_2"
