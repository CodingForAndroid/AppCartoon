<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/shape_ins_rectangle_solid_white_stroke_black"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/txt_size_classify_little"
            android:id="@+id/ll_tab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:clickable="true"
                android:gravity="center"
                android:text="@string/txt_work_ins"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:clickable="true"
                android:gravity="center"
                android:text="@string/txt_author_ins"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/txt_author_ins"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <include android:id="@+id/divider" layout="@layout/layout_divider_gray"/>

        <TextView
            android:id="@+id/tv_brief_des"
            android:layout_margin="@dimen/chanel_item_margin"
            android:text="！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_des_toggle"
            android:layout_marginBottom="@dimen/chanel_item_margin"
            android:background="@mipmap/icon_open_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
